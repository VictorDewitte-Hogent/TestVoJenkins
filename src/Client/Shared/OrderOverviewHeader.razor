<div class="search-wrapper">
    <!-- <img src="assets/search.svg" alt="search"> -->
    <input class="search" type="text" placeholder="search orders">
</div>
<span class="filtericon @(_isFilterOpen ? "filtericonclose" : "")" id="filter" @onclick="InvokeFilterClick" />

@code {
    [CascadingParameter]
    public MainLayout MainLayout { get; set; }
    private bool _isFilterOpen = false;

    private void InvokeFilterClick() {
        _isFilterOpen = !_isFilterOpen;
        MainLayout.HeaderAdditionAction?.Invoke();
    }
}